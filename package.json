{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2018"
    ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "target": "ES2018",
    "incremental": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@constructs/*": [
        "src/constructs/*"
      ],
      "@stacks/*": [
        "src/stacks/*"
      ],
      "@gen/*": [
        ".gen/*"
      ],
      "@config/*": [
        "config/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    ".gen/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cdktf.out",
    "dist"
  ],
  "devDependencies": {
    "tsconfig-paths": "^4.2.0"
  }
}
